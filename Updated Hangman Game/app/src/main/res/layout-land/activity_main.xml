<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dan.myapplication2.MainActivity"
    android:dividerPadding="0dp"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/frag_screen"
        android:layout_weight="1.17">


        <LinearLayout
            android:layout_width="297dp"
            android:layout_height="289dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="0dp"
            android:gravity="left"
            android:weightSum="1">

            <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.dan.myapplication2.buttonFrag"
            android:id="@+id/fragment1"
            tools:layout="@layout/but_frag"
                android:layout_gravity="center_horizontal" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.dan.myapplication2.hintFrag"
                android:id="@+id/fragment3"
                tools:layout="@layout/hint_frag"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp" />



        </LinearLayout>


        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.dan.myapplication2.mainGame"
            android:id="@+id/fragment2"
            tools:layout="@layout/main_frag"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>


</LinearLayout>
