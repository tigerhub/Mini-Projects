<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dan.myapplication2.MainActivity"
    android:weightSum="1">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.dan.myapplication2.mainGame"
        android:id="@+id/fragment"
        tools:layout="@layout/main_frag"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight=".6"
        android:layout_marginBottom="0dp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.dan.myapplication2.buttonFrag"
        android:id="@+id/fragment4"
        tools:layout="@layout/but_frag"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_weight=".5"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
